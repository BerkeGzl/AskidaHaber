@model AppUser
@{
    ViewBag.Title = "UpdateAppUserPassword";
    Layout = "~/Areas/Admin/Views/Shared/AdminAreaLayout.cshtml";
}
<head>
    <title>Kullanıcı Şifre Güncelleme</title>
</head>

<!-- page start-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kullanıcı Şifre Güncelle
            </header>
            <div class="panel-body">
                <div class="form">
                    @using (Html.BeginForm("UpdateAppUserPassword", "AppUser", FormMethod.Post, new {@class = "cmxform form-horizontal tasi-form" }))
                    {
                    <div class="form-group ">
                        <label for="lastname" class="control-label col-lg-2">Yeni Şifre:</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", style = "height:25px;width:200px" })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>
                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">Tekrar Yeni Şifre:</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.RePassword, new { @class = "form-control", style = "height:25px;width:200px" })
                                @Html.ValidationMessageFor(x => x.RePassword)
                            </div>
                        </div>
                    
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Güncelle</button>
                            @Html.ActionLink("İptal Et", "ListAppUser", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                }
                </div>
        </div>
        </section>
    </div>
    </div>

    <!-- page end-->