@model Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminAreaLayout.cshtml";
}
<head>
    <title>Kategori Ekleme</title>
</head>

@if (ViewBag.Mevcut != null)
{
    <h2 align="center" style="color:red">@ViewBag.Mevcut</h2>
}

<!-- page start-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Yeni Kategori
            </header>
            <div class="panel-body">
                <div class="form">
                    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post, new { @class = "cmxform form-horizontal tasi-form" }))
                    {
                        <div class="form-group ">
                            <label for="firstname" class="control-label col-lg-2">Kategori Adı:</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", style = "height:25px;width:200px" }) @Html.ValidationMessageFor(x => x.CategoryName)
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">Kategori Açıklaması:</label>
                            <div class="col-lg-10">
                                @Html.TextAreaFor(x => x.Description, new { style = "height:25px;width:200px" }) @Html.ValidationMessageFor(x => x.Description)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Ekle</button>
                                @Html.ActionLink("İptal Et","ListCategory", null, new { @class="btn btn-default"})
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    </div>
</div>
<!-- page end-->