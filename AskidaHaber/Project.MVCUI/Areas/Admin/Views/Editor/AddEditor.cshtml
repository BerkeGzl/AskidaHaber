@model Editor
@{
    ViewBag.Title = "AddEditor";
    Layout = "~/Areas/Admin/Views/Shared/AdminAreaLayout.cshtml";
}

<head>
    <title>Editör Ekleme</title>
    <meta name="viewport" content="width=device-width" />

    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>

@if (ViewBag.Mevcut != null)
{
    <h2 align="center" style="color:red">@ViewBag.Mevcut </h2>
}
<!-- page start-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Yeni Editör
            </header>
            <div class="panel-body">
                <div class="form">
                    @using (Html.BeginForm("AddEditor", "Editor", FormMethod.Post, new { enctype = "multipart/form-data", @class = "cmxform form-horizontal tasi-form" }))
                    {

                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">İsim:</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", style = "height:25px;width:200px" })
                                @Html.ValidationMessageFor(x => x.FirstName)
                            </div>
                        </div>


                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">Soyad:</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", style = "height:25px;width:200px" })
                                @Html.ValidationMessageFor(x => x.LastName)
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">Cinsiyet:</label>
                            <div class="col-lg-10">
                                @Html.EnumDropDownListFor(x => x.Gender, "Lütfen Seçim Yapınız", new { @class = "btn btn-white dropdown-toggle", style = "height:35px;width:200px" })
                            </div>
                        </div>

                        @*<div class="form-group">
                                <label class="control-label col-lg-2">Doğum Tarihi:</label>
                                <div class="col-md-3 col-xs-11">

                                    <div data-date-viewmode="years" data-date-format="dd-mm-yyyy" data-date="12-02-2012" class="input-append date dpYears">
                                        @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control", value = "12-02-2012", size = "16", @readonly = "" }) @Html.ValidationMessageFor(x => x.BirthDate)

                                        <span class="input-group-btn add-on">
                                            <button class="btn btn-danger" type="button"><i class="icon-calendar"></i></button>
                                        </span>
                                    </div>
                                    <span class="help-block">Tarih Seç</span>
                                </div>
                            </div>*@


                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">Kullanıcı Adı:</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", style = "height:25px;width:200px" })
                                @Html.ValidationMessageFor(x => x.UserName)
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">Şifre:</label>
                            <div class="col-lg-10">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", style = "height:25px;width:200px" })
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">Tekrar Şifre:</label>
                            <div class="col-lg-10">
                                @Html.PasswordFor(x => x.RePassword, new { @class = "form-control", style = "height:25px;width:200px" })
                                @Html.ValidationMessageFor(x => x.RePassword)
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">E-Posta:</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", style = "height:25px;width:200px" })
                                @Html.ValidationMessageFor(x => x.Email)
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">Hakkında:</label>
                            <div class="col-lg-10">
                                @Html.TextAreaFor(x => x.AboutDescription, new { style = "height:25px;width:200px", placeholder = "Hakkında Bir şeyler Yaz" })
                                @Html.ValidationMessageFor(x => x.AboutDescription)
                            </div>
                        </div>

                        <div class="form-group last">
                            <label for="lastname" class="control-label col-lg-2">Resim Yükle:</label>
                            <div class="col-md-9">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                        <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                                    </div>
                                    <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                    <div>
                                        <span class="btn btn-white btn-file">
                                            <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Seç</span>
                                            <span class="fileupload-exists"><i class="icon-undo"></i> Değiştir</span>
                                            <input type="file" class="default" name="resim"/>
                                        </span>
                                        <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload"><i class="icon-trash"></i> Sil</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Ekle</button>
                                @Html.ActionLink("İptal Et", "ListEditor", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    </div>
</div>

<!-- page end-->
