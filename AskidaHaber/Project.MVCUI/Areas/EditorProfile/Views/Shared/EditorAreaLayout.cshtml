<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/Pictures/Site/ico.ico">



    <!-- Bootstrap core CSS -->

    <link href="~/Areas/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Content/bootstrap-reset.css" rel="stylesheet" />
    <link href="~/Areas/assets/bootstrap-fileupload/bootstrap-fileupload.css" rel="stylesheet" />
    <link href="~/Areas/assets/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <!--external css-->
    <link href="~/Areas/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Areas/Content/font-awesome/style.css" rel="stylesheet" />
    <link href="~/Areas/Content/font-awesome/style-responsive.css" rel="stylesheet" />

    <link href="~/Areas/assets/advanced-datatable/media/css/demo_page.css" rel="stylesheet" />
    <link href="~/Areas/assets/advanced-datatable/media/css/demo_table.css" rel="stylesheet" />

    <script src="~/Areas/Scripts/jquery.js"></script>
    <link href="~/Areas/Content/lightbox.min.css" rel="stylesheet" />
    <script src="~/Areas/Scripts/lightbox-plus-jquery.min.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <style>
        .field-validation-error {
            color: red;
        }
    </style>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <section id="container" class="">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Gezinmeyi Değiştir" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a href="@Url.Action("NewsList", new { Area = "", Controller = "Member" })" class="logo">Askıda<span>Haber</span></a>
            <!--logo end-->

            <div class="top-nav ">
                <ul class="nav pull-right top-menu">
                    @*<li>
                            <input type="text" class="form-control search" placeholder="Search">
                        </li>*@
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="" src="@((Session["editor"] as Editor).ImagePath)" style="width:25px;height:25px">
                            <span class="username">@((Session["editor"] as Editor).FullName)</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li><a href="@Url.Action("EditorProfile","EditorProfile", new { id = (Session["editor"] as Editor).ID})"><i class=" icon-suitcase"></i>Profil</a></li>
                            <li><a href="@Url.Action("UpdateProfile", "EditorProfile", new { id = (Session["editor"] as Editor).ID})"><i class="icon-cog"></i> Profili Düzenle</a></li>
                            <li><a href="@Url.Action("LogOut", new { area = "", controller = "Home" })"><i class="icon-key"></i> Çıkış Yap</a></li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a href="@Url.Action("Index", "EditorProfile")">
                            <i class="icon-envelope"></i>
                            <span>Duyurular</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-th"></i>
                            <span>Haberler</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Haber Listesi", "ListNews", "EditorNews")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Silinmiş Haberler", "DeletedsNews", "EditorNews")</li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-th"></i>
                            <span>Yazılar</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Yazı Listesi", "ListArticle", "EditorArticle")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Silinmiş Yazılar", "DeletedsArticle", "EditorArticle")</li>
                        </ul>
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper site-min-height">
                <!-- page start-->
                @RenderBody()
                <!-- page end-->
            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                @DateTime.Now.Year &copy; Askıda Haber
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/Areas/assets/advanced-datatable/media/js/jquery.js"></script>
    <script src="~/Areas/assets/bootstrap-fileupload/bootstrap-fileupload.js"></script>
    <script src="~/Areas/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Areas/Scripts/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/Areas/Scripts/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Areas/Scripts/jquery.scrollTo.min.js"></script>
    <script src="~/Areas/Scripts/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Areas/assets/advanced-datatable/media/js/jquery.dataTables.js"></script>
    <script src="~/Areas/Scripts/jquery.validate.min.js"></script>
    <script src="~/Areas/Scripts/respond.min.js"></script>


    <!--common script for all pages-->
    <script src="~/Areas/Scripts/common-scripts.js"></script>


    <!--script for this page only-->
    <script src="~/Areas/Scripts/advanced-form-components.js"></script>
    <script type="text/javascript" src="~/Areas/Scripts/form-validation-script.js"></script>

    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            $('#example').dataTable({
                "aaSorting": [[4, "desc"]]
            });
        });
    </script>
</body>
</html>
