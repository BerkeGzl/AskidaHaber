<script>
    $(function () {
        $("#Search-box").keypress(function (e) {
            var keyword = $("#Search-box").val();
            if (e.keyCode == 13) {

                $.ajax({
                    url: "http://localhost:63265/Member/PartialSearch",
                    type: "Get",
                    data: { result: keyword },
                    success: function (donenVeri) {
                        window.location = "/arama?result=" + keyword
                    }
                })
            }

        })
    })
</script>