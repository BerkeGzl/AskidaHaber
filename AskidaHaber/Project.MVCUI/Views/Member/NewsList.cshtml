                                    {
                                        <div class="col-lg-6 single-popular-post">
                                            <div class="feature-img-wrap relative">
                                                <div class="feature-img relative">
                                                    <div class="overlay overlay-bg"></div>
                                                    <img class="img-fluid" src="@item.ImagePath" alt="" style="height:200px; width:400px">
                                                </div>
                                                <ul class="tags">
                                                    <li>@Html.ActionLink(@item.Category.CategoryName, "SelectbyCategory", new { id = item.CategoryID })</li>
                                                </ul>
                                            </div>
                                            <div class="details">
                                                <h4>@Html.ActionLink(item.Title, "DetailsNews", "Member", new { id = item.ID, catID = item.CategoryID }, new { style = "color:black" })</h4>
                                                <p class="excert">
                                                    @item.Summary
                                                </p> <hr />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>*@
                        <!-- End relavent-story-post Area -->

                    </div>
                    <div class="col-lg-4">
                        <div class="sidebars-area">
                            <div class="single-sidebar-widget editors-pick-widget">
                                <h6 class="title">Dünya</h6>
                                @foreach (News item in Model.dunya.Take(12))
                                {
                                    <div class="editors-pick-post">
                                        <div class="feature-img-wrap relative">
                                            <div class="feature-img relative">
                                                <div class="overlay overlay-bg"></div>
                                                @if (item.ImagePath == "Dosya Boş")
                                                {
                                                    <img class="img-fluid" src="~/Pictures/Site/news-default.jpg" />
                                                }
                                                else
                                                {
                                                    <img class="img-fluid" src="@item.ImagePath" />
                                                }
                                            </div>
                                            <ul class="tags">
                                                <li>@Html.ActionLink(item.Category.CategoryName, "SelectbyCategory", new { id = item.CategoryID })</li>
                                            </ul>
                                        </div><br />
                                        <div class="details">
                                            <h4>@Html.ActionLink(item.Title, "DetailsNews", "Member", new { category = Url.FriendlyURLTitle(item.Category.CategoryName), Title = Url.FriendlyURLTitle(item.Title), id = item.ID, catID = item.CategoryID }, new { style = "color:black" })</h4>
                                            <p class="excert">
                                                @item.Summary
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="single-sidebar-widget most-popular-widget">
                                <h6 class="title">Sağlık</h6>
                                @foreach (News item in Model.saglik.Take(12))
                                {
                                    <div class="editors-pick-post">
                                        <div class="feature-img-wrap relative">
                                            <div class="feature-img relative">
                                                <div class="overlay overlay-bg"></div>
                                                @if (item.ImagePath == "Dosya Boş")
                                                {
                                                    <img class="img-fluid" src="~/Pictures/Site/news-default.jpg" />
                                                }
                                                else
                                                {
                                                    <img class="img-fluid" src="@item.ImagePath" />
                                                }
                                            </div>
                                            <ul class="tags">
                                                <li>@Html.ActionLink(item.Category.CategoryName, "SelectbyCategory", new { id = item.CategoryID })</li>
                                            </ul>
                                        </div><br />
                                        <div class="details">
                                            <h4>@Html.ActionLink(item.Title, "DetailsNews", "Member", new { category = Url.FriendlyURLTitle(item.Category.CategoryName), Title = Url.FriendlyURLTitle(item.Title), id = item.ID, catID = item.CategoryID }, new { style = "color:black" })</h4>
